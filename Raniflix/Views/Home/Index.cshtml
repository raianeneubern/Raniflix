@model List<Movie>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Raniflix</h1>
    <p>Seu portal de informações sobre Filmes</p>
</div>
<div class="container-fluid mt-4">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
        @foreach (var movie in Model)
        {
           <div class="col">
                <div class="card shadow-sm cursor-pointer h-100 border-dark">
                    <img src="@movie.Image" class="card-img-top"
                        width="100%" height="300" alt="@movie.Title" />
                    <div class="card-body">
                        <h6 class="card-title">@movie.Title</h6>
                        <p>@string.Join(",", movie.Genres.Select(mv => mv.Genre.Name))</p>
                    </div>
                </div>
           </div>
        }
    </div>
</div>


